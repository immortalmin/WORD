<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f4f4f"
    tools:context=".ExampleActivity">


    <TextView
        android:id="@+id/word_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FF7F00"
        android:textSize="35dp"
        android:text="accuse of" />

    <TextView
        android:id="@+id/C_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-30dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/word_group"
        android:text="指责" />

    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:padding="0dp"
        android:layout_below="@+id/C_meaning"
        android:textSize="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="#FFFFFF"
        android:text="页码：1" />

    <TextView
        android:id="@+id/example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="例句" />

    <View
        android:id="@+id/view"
        android:layout_below="@+id/example"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:layout_height="5px" />

    <ListView
        android:id="@+id/example_list"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/non_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:layout_below="@+id/view"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:text="暂无例句" />


</RelativeLayout>