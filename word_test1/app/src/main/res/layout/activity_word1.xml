<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wordlist"
    tools:context=".word1Activity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:weightSum="100"
        android:background="@drawable/num_bk"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:text="总词组数"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:layout_gravity="center_horizontal"
                android:textColor="#16a5de"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="50"
            android:orientation="vertical">
            <TextView
                android:id="@+id/finished_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:layout_toRightOf="@+id/all_view"
                android:layout_gravity="center_horizontal"
                android:text="已完成数"
                android:textColor="#000000"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/finished_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/all_view"
                android:layout_gravity="center_horizontal"
                android:text="2222"
                android:textColor="#de380f"
                android:textSize="20dp"
                />
        </LinearLayout>



    </LinearLayout>


    <ListView
        android:id="@+id/ListView1"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="-25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>