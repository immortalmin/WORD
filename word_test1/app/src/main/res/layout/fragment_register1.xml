<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register1Fragment">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.immortalmin.www.word.MyEditText
            android:id="@+id/telephone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:textColor="#eef1f2"
            android:textColorHint="#aeacb6"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="手机号码"
            app:DisplayStyle="0"
            app:TextType="2"/>

        <com.immortalmin.www.word.MyEditText
            android:id="@+id/verification"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_below="@+id/telephone"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textColor="#eef1f2"
            android:textColorHint="#aeacb6"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="验证码"
            app:DisplayStyle="0"
            app:TextType="2"/>

        <Button
            android:id="@+id/getCodeBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/verification"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_alignTop="@+id/verification"
            android:background="@drawable/rounded_corners_gray"
            android:textColor="#000000"
            android:padding="3dp"
            android:textSize="13sp"
            android:text="获取验证码" />

        <Button
            android:id="@+id/commitBtn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/verification"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:textAllCaps="false"
            android:background="@drawable/login_btn"
            android:textColor="#FFFFFF"
            android:text="确定" />


    </RelativeLayout>

    <Button
        android:id="@+id/notBindingBtn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:background="#00000000"
        android:drawableLeft="@drawable/left_arrow1"
        android:text="不绑定"/>

    <Button
        android:id="@+id/otherWaysBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/notBindingBtn"
        android:padding="5dp"
        android:background="#00000000"
        android:drawableRight="@drawable/right_arrow1"
        android:text="其他方式"/>

</RelativeLayout>