<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/cword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="145dp"
        android:text="指责；指控"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:minWidth="50dp"
        android:maxWidth="300dp"
        android:layout_below="@+id/cword"
        android:background="@null"
        android:textAlignment="center"
        android:textSize="30sp"
        android:inputType="none"
        android:textCursorDrawable="@drawable/cursor"
        android:maxLines="1"
        android:text=""/>

    <Button
        android:id="@+id/clean_btn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_toEndOf="@+id/eword"
        android:layout_alignTop="@+id/eword"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/del4"/>

    <TextView
        android:id="@+id/correct_word"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/eword"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="#05f725"
        android:text="correct_word" />



</RelativeLayout>