<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@mipmap/rc1"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/btn_wordlist"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_gray"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="LIST" />


        <Button
            android:id="@+id/btn_recite"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/btn_wordlist"
            android:background="@drawable/rounded_corners_gray"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:text="SELECT" />

        <Button
            android:id="@+id/btn_spell"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_gray"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btn_wordlist"
            android:layout_marginTop="15dp"
            android:text="SPELL" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corners_gray"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_recite"
            android:layout_toRightOf="@+id/btn_spell"
            android:text="TEST" />
    </RelativeLayout>
