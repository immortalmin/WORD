<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch2"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/nav_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#303133"
        android:textStyle="bold"
        android:text="登 录" />

    <Button
        android:id="@+id/forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="忘记密码" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/login_profile_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:civ_border_width="1dp"
            app:civ_border_overlay="true"
            app:civ_border_color="#8c8888"
            app:civ_fill_color="#bab3b3"
            android:src="@drawable/unload"/>

        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_profile_photo"
            android:layout_marginTop="50dp"
            >

            <EditText
                android:id="@+id/login_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_edittext"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="19dp"
                android:textColor="#eef1f2"
                android:textColorHint="#aeacb6"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="username" />

            <Button
                android:id="@+id/username_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/user_icon"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/clean_btn1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/del3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_layout"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/login_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="70dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_edittext"
                android:inputType="textPassword"
                android:textSize="19dp"
                android:textColor="#eef1f2"
                android:textColorHint="#aeacb6"
                android:textCursorDrawable="@drawable/cursor"
                android:hint="password" />

            <Button
                android:id="@+id/password_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/pwd_icon"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/switch_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/seen_icon"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/clean_btn2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/del3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/password_layout"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:background="@drawable/login_btn"
            android:textColor="#FFFFFF"
            android:text="Login" />

        <Button
            android:id="@+id/reg_btn"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_below="@+id/password_layout"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/register_btn"
            android:textColor="#FFFFFF"
            android:text="Register"/>
    </RelativeLayout>

</RelativeLayout>