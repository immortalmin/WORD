<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch1"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners_purple"
        android:textColor="#FFFFFF"
        android:text="Register"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:drawableRight="@drawable/user_icon"
            android:textSize="19dp"
            android:textColor="#859aa6"
            android:textColorHint="#28497F"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:drawableRight="@drawable/pwd_icon"
            android:textSize="19dp"
            android:textColor="#859aa6"
            android:textColorHint="#5B5287"
            android:textCursorDrawable="@drawable/cursor"
            android:hint="password" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corners_green"
            android:textColor="#FFFFFF"
            android:text="Login" />
    </RelativeLayout>

</RelativeLayout>