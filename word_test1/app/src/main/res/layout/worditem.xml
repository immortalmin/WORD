<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <com.immortalmin.www.word.WordView
            android:id="@+id/word_en"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:mText="accuse of"
            app:mTextSize="22dp"
            app:mTextFirstColor="#0ced08"
            app:mTextSecondColor="#FFFFFF" />
        <TextView
            android:id="@+id/word_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word_en"
            android:paddingBottom="5dp"
            android:textColor="#dcdedb"
            android:textSize="13dp"
            android:text="指责；指控"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word_en"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="8/29"
            android:textColor="#B9CCA8"
            />



    </RelativeLayout>



</FrameLayout>