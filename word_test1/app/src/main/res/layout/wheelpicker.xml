<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/worddialog_round_corners">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="设置"
        android:textColor="#e6e3e3"
        android:textSize="20sp"/>

    <com.immortalmin.www.word.WheelPicker
        android:id="@+id/wheelpicker"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        app:wheelCyclic="true"
        app:itemTextColor="#af9292"
        app:selectedTextColor="#ffffff"
        app:indicatorTextColor="#c9c3c3"
        app:wheelCurtainBorderColor="#70000000"
        app:wheelCurtainColor="#50dcd7d7"
        >

    </com.immortalmin.www.word.WheelPicker>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wheelpicker"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corners_green"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:text="OK"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corners_red"
            android:text="cancel"/>
    </LinearLayout>

</RelativeLayout>
